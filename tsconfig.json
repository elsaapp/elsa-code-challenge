{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["es6"],
    "noUnusedLocals": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "#assets/*": ["./assets/*"]
    }
  }
}
